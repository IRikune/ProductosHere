---
import "@fontsource/amatic-sc";
import "../styles/global.css";
import AlignLeftIcon from "../components/icons/AlignLeftIcon.astro";
import LayoutGridIcon from "../components/icons/LayoutGridIcon.astro";
import Logo from "../components/Logo.astro";
import { BurgerMenu } from "../components/preact/BurgerMenu";
import { Button } from "../components/preact/Button";
import CommonHead from "../components/CommonHead.astro";
---

<!doctype html>
<html lang="es">
    <head>
        <CommonHead title="ProductosHere" description="ProductosHere" />
    </head>

    <body>
        <header>
            <nav class="sticky top-0 z-50 font-light md:mx-20">
                <ul class="flex justify-between items-center py-5 px-10">
                    <div>
                        <a href="/">
                            <Logo transition:name="logo" transition:persist />
                        </a>
                    </div>
                    <div class="mt-2">
                        <BurgerMenu class="absolute" client:idle />
                    </div>
                </ul>
            </nav>
        </header>
        <section>
            <aside>
                <ul>
                    <div>
                        <li>
                            <a class="flex items-center gap-2">
                                <AlignLeftIcon />
                                <span>Dashboard</span>
                            </a>
                        </li>
                        <li>
                            <a class="flex items-center gap-2">
                                <LayoutGridIcon />
                                <span>Mis pedidos</span>
                            </a>
                        </li>
                        <li>
                            <a>Contratos</a>
                        </li>
                    </div>
                    <div>
                        <li>
                            <a>Perfil</a>
                        </li>
                    </div>
                </ul>
            </aside>
        </section>
        <slot />
    </body>
</html>

<style>
    html,
    body {
        margin: 0;
        width: 100%;
        height: 100%;
        background-color: #f4f2ed;
    }
</style>
