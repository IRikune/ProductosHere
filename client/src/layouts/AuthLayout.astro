---
import "@fontsource/amatic-sc";
import "../assets/global.css";
import { Sparkles } from "../components/decorations/Sparkles";
import { Loop } from "../components/decorations/Loop";
import { TreeArrows } from "../components/decorations/TreeArrows";
import { AuthPresentation } from "../components/AuthPresentation";
---

<!doctype html>
<html lang="es">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="generator" content={Astro.generator} />
        <title>Astro Basics</title>
    </head>
    <body>
        <main
            class="w-dvw h-dvh flex justify-center items-center flex-col relative"
        >
            <Sparkles
                className="w-64 h-64 absolute top-10 left-10 fill-neutral-400"
            />
            <Sparkles
                className="w-64 h-64 absolute bottom-10 right-10 fill-neutral-400"
            />
            <Loop
                className="w-96 h-96 absolute top-0 right-0 fill-neutral-400"
            />

            <TreeArrows
                className="w-48 h-48 absolute bottom-10 left-10 fill-neutral-400"
            />
            <AuthPresentation />
            <slot />
        </main>
    </body>
</html>

<style>
    html,
    body {
        margin: 0;
        width: 100%;
        height: 100%;
        background-color: #f4f2ed;
    }
    section {
        transition-behavior: allow-discrete;
        transition-property: display opacity;
        transition-duration: 1s;
        transition-timing-function: ease-out;
        transition: ini;
    }
    @keyframes initial {
        0% {
            opacity: 0;
            display: none;
        }

        50% {
            opacity: 1;
            display: block;
        }

        100% {
            opacity: 0;
            display: none;
        }
    }
</style>
